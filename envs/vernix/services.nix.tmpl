{ pkgs, config, ... }:

{
  systemd.targets.sleep.enable = false;
  systemd.targets.suspend.enable = false;
  systemd.targets.hibernate.enable = false;
  systemd.targets.hybrid-sleep.enable = false;
  services.gnome.gnome-keyring.enable = true;

  # Configure keymap in X11
  services.xserver = {
    xkb = {
      layout = "us";
    };
  };
  services.deluge = {
    web = {
      openFirewall = true;
      enable = true;
    };
    enable = true;
    declarative = true;
    openFirewall = false;
    authFile = "/var/lib/deluge/auth";
    dataDir = "/var/lib/deluge";
    config = {
          add_paused = false;
          allow_remote = false;
          auto_manage_prefer_seeds = true;
          auto_managed = true;
          cache_expiry = 60;
          cache_size = 512;
          copy_torrent_file = false;
          daemon_port = 58846;
          del_copy_torrent_file = false;
          dht = true;
          dont_count_slow_torrents = false;
          download_location = "/mnt/doomnas/Library/downloads";
          download_location_paths_list = [];
          enabled_plugins = [];
          enc_in_policy = 0;
          enc_level = 2;
          enc_out_policy = 0;
          geoip_db_location = "/usr/share/GeoIP/GeoIP.dat";
          ignore_limits_on_local_network = true;
          info_sent = 0.0;
          listen_interface = "";
          listen_ports = [
              6881
              6891
          ];
          listen_random_port = 50220;
          listen_reuse_port = true;
          listen_use_sys_port = false;
          lsd = true;
          max_active_downloading = 10;
          max_active_limit = 12;
          max_active_seeding = 7;
          max_connections_global = 200;
          max_connections_per_second = 20;
          max_connections_per_torrent = -1;
          max_download_speed = -1.0;
          max_download_speed_per_torrent = -1;
          max_half_open_connections = 50;
          max_upload_slots_global = 4;
          max_upload_slots_per_torrent = -1;
          max_upload_speed = -1.0;
          max_upload_speed_per_torrent = -1;
          move_completed = true;
          move_completed_path = "/mnt/doomnas/Library/movies";
          move_completed_paths_list = [];
          natpmp = true;
          new_release_check = false;
          outgoing_interface = "";
          outgoing_ports = [
              0
              0
          ];
          path_chooser_accelerator_string = "Tab";
          path_chooser_auto_complete_enabled = true;
          path_chooser_max_popup_rows = 20;
          path_chooser_show_chooser_button_on_localhost = true;
          path_chooser_show_hidden_files = false;
          peer_tos = "0x00";
          plugins_location = "/home/${NIXUSER}/.config/deluge/plugins";
          pre_allocate_storage = false;
          prioritize_first_last_pieces = false;
          proxy = {
              anonymous_mode = true;
              force_proxy = true;
              hostname = "ee-tll-wg-socks5-001.relays.mullvad.net";
              password = "";
              port = 1080;
              proxy_hostnames = true;
              proxy_peer_connections = true;
              proxy_tracker_connections = true;
              type = 2;
              username = "";
          };
          queue_new_to_top = false;
          random_outgoing_ports = true;
          random_port = true;
          rate_limit_ip_overhead = true;
          remove_seed_at_ratio = false;
          seed_time_limit = 180;
          seed_time_ratio_limit = 7.0;
          send_info = false;
          sequential_download = false;
          share_ratio_limit = 3.0;
          shared = false;
          stop_seed_at_ratio = true;
          stop_seed_ratio = 3.0;
          super_seeding = false;
          torrentfiles_location = "/home/${NIXUSER}/Downloads";
          upnp = true;
          utpex = true;
      };
  };
  services.audiobookshelf = {
    enable = true;
    port = 8113;
  };

  services.nginx = {
    enable = true;
    recommendedProxySettings = true;
    virtualHosts."${HOSTNAME}.tuna-moth.ts.net" = {
      locations."/apps/abs/" = {
        proxyPass = "http://127.0.0.1:${builtins.toString config.services.audiobookshelf.port}";
        proxyWebsockets = true;
        extraConfig = ''
          rewrite ^/apps/abs/(.*) /$1 break;
          proxy_redirect http:// $scheme://;
        '';
      };
      locations."/apps/deluge/" = {
        proxyPass = "http://127.0.0.1:${builtins.toString config.services.deluge.web.port}";
        proxyWebsockets = true;
        extraConfig = ''
          rewrite ^/apps/deluge/(.*) /$1 break;
          proxy_redirect http:// $scheme://;
        '';
      };
    };
  };
  networking.firewall = {
    allowedTCPPorts = [ 3389 1883 8123 ];
    allowedUDPPorts = [ 3389 ];
  };
}
